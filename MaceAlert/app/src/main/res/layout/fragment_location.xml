<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mace.maceAlert.Location$PlaceholderFragment">

    <com.mace.View.Txt_Montserat_Regular
        android:id="@+id/txt_time"
        style="@style/txt_label"
        android:text="@string/addevice"
        android:textColor="@color/blue_sky"
        android:textSize="24sp"
        android:clickable="true"
        android:padding="4dp"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_time"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_edt"
        android:minHeight="@dimen/list_width"
        android:orientation="vertical"
        android:id="@+id/linear_mode"
        >

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            </ListView>

    </LinearLayout>

</RelativeLayout>
