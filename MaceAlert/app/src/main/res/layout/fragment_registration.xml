<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_blue_layout"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mace.maceAlert.Registration$PlaceholderFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.mace.View.Txt_Montserat_Regular
                android:id="@+id/textView_name"
                style="@style/txt_label"
                android:text="@string/name" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <com.mace.View.Edt_Montserat_regular
                    android:id="@+id/edt_firstname"
                    style="@style/Edt_"
                    android:layout_weight="1"
                    android:hint="First Name"
                    android:inputType="textPersonName"
                    android:nextFocusDown="@+id/edt_lastname"
                    android:textColorHint="@color/grey_shade3" />

                <com.mace.View.Edt_Montserat_regular
                    android:id="@+id/edt_lastname"
                    style="@style/Edt_"
                    android:layout_weight="1"
                    android:hint="Last Name"
                    android:inputType="textPersonName"
                    android:textColorHint="@color/grey_shade3" />
            </LinearLayout>

            <com.mace.View.Txt_Montserat_Regular
                android:id="@+id/textView_email"
                style="@style/txt_label"
                android:text="@string/email" />

            <com.mace.View.Edt_Montserat_regular
                android:id="@+id/edt_email"
                style="@style/Edt_"
                android:inputType="textEmailAddress" />

            <com.mace.View.Txt_Montserat_Regular
                android:id="@+id/textView_pswd"
                style="@style/txt_label"
                android:text="@string/password" />

            <com.mace.View.Edt_Montserat_regular
                android:id="@+id/edt_pswd"
                style="@style/Edt_"
                android:inputType="textPassword" />


            <com.mace.View.Txt_Montserat_Regular
                android:id="@+id/textView_passcode"
                style="@style/txt_label"
                android:text="@string/passcode" />

            <com.mace.View.Edt_Montserat_regular
                android:id="@+id/edt_passcode"
                style="@style/Edt_"
                android:inputType="textPassword" />


            <com.mace.View.Txt_Montserat_Regular
                android:id="@+id/textView_country"
                style="@style/txt_label"
                android:text="@string/country" />

            <com.mace.View.Btn_Montserat_Regular
                android:id="@+id/edt_country"
                style="@style/Edt_"
                android:layout_weight="1"
                android:gravity="left" />


            <com.mace.View.Btn_Montserat_Regular
                android:id="@+id/btn_register"
                style="@style/Btn_blue"
                android:layout_marginTop="25dp"
                android:text="@string/registration" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>

