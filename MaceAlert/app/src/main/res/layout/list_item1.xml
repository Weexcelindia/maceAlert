<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:paddingTop="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/icon_circule" />

    <com.mace.View.Txt_Montserat_Bold
        android:id="@+id/txt_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@+id/txt_time"
        android:layout_toRightOf="@+id/imageView"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Medium Textghfkl;ghfhgjfgjfhjgfgfgf"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="16sp"

        />

    <com.mace.View.Txt_Montserat_Bold
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/txt_settings"
        android:layout_centerVertical="true"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="16sp" />

    <com.mace.View.Txt_Montserat_Regular
        android:id="@+id/txt_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_settings"
        android:layout_below="@+id/txt_settings"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="New Text"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp" />

    <com.mace.View.Txt_Montserat_Regular
        android:id="@+id/textView_door"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_action"
        android:layout_below="@+id/txt_action"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="New Text"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp" />

</RelativeLayout>